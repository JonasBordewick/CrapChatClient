<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<DialogPane styleClass="dialogPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <header>
      <Label text="Bitte gebe deinen CrapChatâ„¢ Nickname ein">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </header>
   <content>
      <VBox>
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Dein Nickname:">
                     <font>
                        <Font name="Comic Sans MS" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="loginField" focusTraversable="false" style="-fx-background-color: #c5e3fc;" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButton" text="Login">
               <font>
                  <Font name="Comic Sans MS" size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </content>
</DialogPane>
